{
  "automock": false,
  "clearMocks": true,
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "extensionsToTreatAsEsm": [".ts"],
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": ["**/*.test.ts"],
  "transform": {
    "^.+\\.(mt|t|cj|j)s$": ["ts-jest", { "useESM": true }]
  },
  "verbose": false
}
